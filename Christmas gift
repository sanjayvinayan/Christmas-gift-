        #snow-canvas { position: absolute; top: 0; left: 0; pointer-events: none; }
        .card { background: rgba(255, 255, 255, 0.1); padding: 30px; border-radius: 20px; backdrop-filter: blur(10px); border: 1px solid #ff4d4d; z-index: 10; width: 80%; max-width: 400px; }
        .btn { background: #ff4d4d; color: white; border: none; padding: 15px 30px; border-radius: 30px; font-size: 18px; cursor: pointer; box-shadow: 0 4px 15px rgba(255, 77, 77, 0.4); }
        h1 { font-size: 24px; margin-bottom: 20px; color: #ff4d4d; }
        #gift-content { display: none; animation: zoomIn 0.5s ease forwards; }
        @keyframes zoomIn { from { transform: scale(0); opacity: 0; } to { transform: scale(1); opacity: 1; } }
